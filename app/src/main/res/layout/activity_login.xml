<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="16dp"
                android:src="@mipmap/maple_tree_logo"
                android:visibility="gone"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOCA"
                android:textAllCaps="true"
                android:layout_marginBottom="36dp"
                android:textStyle="bold"
                android:textSize="26dp"
                android:letterSpacing="0.5"
                android:gravity="center"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_layout"
                android:orientation="vertical"
                android:padding="32dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textAllCaps="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/cell_label"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:paddingLeft="10dp"
                        style="@style/cell_text"
                        android:background="@drawable/rounded_edittext"
                        android:textColor="@color/edit_text_color" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="right"
                        android:visibility="gone" />

                </FrameLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textAllCaps="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/cell_label"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    style="@style/cell_text"
                    android:text=""
                    android:background="@drawable/rounded_edittext"
                    android:textColor="@color/edit_text_color" />

                <CheckBox
                    android:id="@+id/remember_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Remember Me"
                    android:buttonTint="@color/monsoon"
                    android:textColor="@color/monsoon" />

            </LinearLayout>



            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/rounded_button_default"
                android:textColor="@color/white"
                android:letterSpacing="0.1"
                android:text="LOGIN" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot your password?"
                android:layout_marginTop="16dp"
               android:gravity="center_horizontal"
                android:textColor="@color/cell_label"/>



            <View
                android:layout_width="wrap_content"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/api_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="right|bottom"
                android:text="ver 0.0"
                android:textColor="@color/oil" />

            <TextView
                android:id="@+id/ui_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="right|bottom"
                android:text="ver 0.0"
                android:textColor="@color/oil" />

        </LinearLayout>


    </FrameLayout>
</LinearLayout>








